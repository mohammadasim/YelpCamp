<% include ../partials/header %>
<div class="container">
    <h2>Create a new Camp ground</h2>
    <div class="campform">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" id="" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" id="" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" id="" placeholder="price per night in Â£" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="5" name="description" id="" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>
<% include ../partials/footer %>